{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2016",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": false,
    "preserveConstEnums" : true,
    "skipLibCheck": true,
    "moduleResolution":"node",
    "strict": false,
    "noImplicitAny": false
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/modules"]
}
